{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "outDir": "lib",
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "downlevelIteration": true,
    "alwaysStrict": true,
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["./cache", "./node_modules"]
}
